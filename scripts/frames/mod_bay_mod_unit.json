{
    "id": "mech_mod_frame",
    "type": "sub_prompt",
    "size": [1200,620],

    "mouse_esc": false,
    "draw_priors": false,
    
    "actns":
    [
        {
            "actn": "var",
            "args": "weap_match1 = 'beam"
        },

        {
            "actn": "var",
            "args": "weap_match2 = 'flame"
        },

        {
            "actn": "mod_frame",
            "args":
            {
                "id": "tech_list_frame", 
                "actn": "refresh_options"
            }
        },

        {
            "actn": "var",
            "args": "cur_tech_list = mech_mod_frame:frame:options"
        }
    ],

    "frames":
    [
        {
            "dim_text": false,

            "pos": [0, 0],
            "size": [600,620],

            "texts":
            [
                {
                    "title": "INVENTORY"
                }
            ]
        },

        {
            "id": "tech_list_frame",

            "dim_text": false,

            "pos": [20, 124],
            "size": [560,420],
            
            "border": 0,
            
            "toggles_left_right_select": true,
            "ui":
            [
                {
                    "id": "beam_button",

                    "type": "toggle_button",
                    "pos": [35, -60],
                    "size": [150, 40],

                    "border_color": [255,255,0],
                    "click_select": true,
                    "dim_text": false,

                    "value": "ENERGY",
                    "text_color": [255,255,0],

                    "on_select":
                    [
                        {
                            "actn": "var",
                            "args": "weap_match1 = 'beam"
                        },

                        {
                            "actn": "var",
                            "args": "weap_match2 = 'flame"
                        },

                        {
                            "actn": "mod_frame",
                            "args":
                            {
                                "id": "tech_list_frame", 
                                "actn": "refresh_options"
                            }
                        },

                        {
                            "actn": "var",
                            "args": "cur_tech_list = mech_mod_frame:frame:options"
                        }
                    ]
                },

                {
                    "id": "cannon_button",

                    "type": "toggle_button",
                    "pos": [205, -60],
                    "size": [150, 40],

                    "border_color": [255,255,0],
                    "click_select": true,
                    "dim_text": false,

                    "value": "CANNONS",
                    "text_color": [255,255,0],

                    "on_select":
                    [
                        {
                            "actn": "var",
                            "args": "weap_match1 = 'cannon"
                        },

                        {
                            "actn": "var",
                            "args": "weap_match2 = 'mg"
                        },

                        {
                            "actn": "mod_frame",
                            "args":
                            {
                                "id": "tech_list_frame", 
                                "actn": "refresh_options"
                            }
                        },

                        {
                            "actn": "var",
                            "args": "cur_tech_list = mech_mod_frame:frame:options"
                        }
                    ]
                },

                {
                    "id": "missile_button",

                    "type": "toggle_button",
                    "pos": [375, -60],
                    "size": [150, 40],

                    "border_color": [255,255,0],
                    "click_select": true,
                    "dim_text": false,

                    "value": "MISSILES",
                    "text_color": [255,255,0],

                    "on_select":
                    [
                        {
                            "actn": "var",
                            "args": "weap_match1 = 'missile"
                        },

                        {
                            "actn": "var",
                            "args": "weap_match2 = 'missile"
                        },

                        {
                            "actn": "mod_frame",
                            "args":
                            {
                                "id": "tech_list_frame", 
                                "actn": "refresh_options"
                            }
                        },

                        {
                            "actn": "var",
                            "args": "cur_tech_list = mech_mod_frame:frame:options"
                        }
                    ]
                }
            ],
            
            "ignore_enter": true,
            "list": 
            {
                "type": "item_list",

                "Xsorted": "text",
                "sorted": "weap_ammo",
                "grouped": true,

                "text": "{item:get_name}",
                "Xtext_right": "{item:total_damage} DMG / {item:heat} HEAT",
                "text_right": "{item:tons} TONS",

                "var": "mod_tech",

                "is_draggable": true,
                "Xdrag_icon": "{salvage:drag_icon}",

                "actn": "float_item",
                "args":
                {
                    "source_item": "{mech_mod_frame:selected:item}",

                    "targ_prompt": "mech_mod_frame",
                    "dragging_clears_targ_prompt_opt": false,
                    
                    "float_frame_offset": [150,30],
                    "float_frame":
                    {
                        "file": "scripts/frames/mod_item_float.json"
                    },

                    "on_placement":
                    {
                        "actn": "remove_item",
                        "args": "self"
                    }                    
                },
                
                "source": "player_tech",
                "add_if": 
                [
                    "or",
                    "item:data:store_type == weap_match1",
                    "item:data:store_type == weap_match2"
                ],

                "list_size": 8
            }
        },

