{
    "name": "Piratetech",
    "desc": "Arrr! you looking to become the merc you always dreamed of? Love the experimental gear produced by the brightest and craziest people? Come enjoy PirateTech!",
    "splash": "images/splash.png",

    "first_trigger": "startup",

    "triggers":
    {
        "startup":
        {
            "actns":
            [
                {
                    "actn": "file_var",
                    "args": "data/paint_palette.json"
                },
                
                {
                    "actn": "battle_unit_selection_file",
                    "args": "scripts/frames/battle_unit_selection.json"
                },
                
                {
                    "actn": "battle_enemy_selection_file",
                    "args": "scripts/frames/battle_enemy_selection.json"
                },
                
                {
                    "actn": "battle_status_bar_file",
                    "args": "scripts/frames/battle_status_bar.json"
                },
                
                {
                    "actn": "rpg_status_bar_file",
                    "args": "scripts/frames/rpg_status_bar.json"
                },
                
                {
                    "actn": "set_star_map_file",
                    "args": "data/star_map_3025.json"
                },

                {
                    "actn": "var",
                    "args": "show_era_blurbs = true"
                },

                {
                    "actn": "set_goods",
                    "args":
                    {
                        "file": "data/goods.json",
                        "update_time": 30
                    }
                },

                {
                    "actn": "new_list",
                    "args": 
                    {
                        "name": "news_list",
                        "persistent": "true"
                    }
                },

                {
                    "actn": "add_to_list",
                    "args": 
                    {
                        "list": "news_list",
                        "type": "news",

                        "xfiles": "texts/news",
                        "file": "texts/news/mw_news_stories.txt"
                    }
                },

                {
                    "actn": "add_to_list",
                    "args":
                    {
                        "list": "news_list",
                        "type": "news",

                        "date": "last",
                        "contents": "There are no more new stories right now"
                    }
                },

                {
                    "actn": "set_planet",
                    "args": "Outreach"
                },

                {
                    "actn": "var",
                    "args": "money = 0"
                },

                {
                    "actn": "update_game_date",
                    "args":
                    {
                        "set":
                        {
                            "day": 21,
                            "month": "May",
                            "year": 3025
                        }
                    }
                },

                {
                    "actn": "on_date_change",
                    "args": "update_star_map"
                },

                {
                    "actn": "new_list",
                    "args": 
                    {
                        "name": "player_crew",
                        "persistent": "true"
                    }
                },

                {
                    "actn": "new_list",
                    "args": 
                    {
                        "name": "player_mechs",
                        "persistent": "true"
                    }
                },

                {
                    "actn": "new_list",
                    "args": 
                    {
                        "name": "player_tech",
                        "persistent": "true"
                    }
                },

                {
                    "actn": "add_to_list",
                    "args": 
                    {
                        "list": "player_crew",
                        "type": "crew",

                        "max_health": 5,

                        "skill_level": ["veteran"],

                        "is_player": true,
                        "can_fire": false
                    }
                },

                {
                    "actn": "new_rpg",
                    "args": 
                    {
                        "map": "maps/planets/outreach.tmx",
                        "script": "maps/planets/capital_planet_rpg.json",
                        "mods":
                        [
                            "unit_setup.json"
                        ]
                    }
                }
            ]           
        }
    }
}
