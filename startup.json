{
    "name": "Piratetech",
    "desc": "Arrr! you looking to become the merc you always dreamed of? Love the experimental gear produced by the brightest and craziest people? Come enjoy PirateTech!",
    "splash": "images/splash.png",

    "first_trigger": "startup",

    "triggers":
    {
        "startup":
        {
            "actns":
            [
                {
                    "actn": "set_star_map_file",
                    "args": "data/star_map_3025.json"
                },

                {
                    "actn": "var",
                    "args": "show_era_blurbs = true"
                },

                {
                    "actn": "new_list",
                    "args": 
                    {
                        "name": "news_list",
                        "persistent": "true"
                    }
                },

                {
                    "actn": "add_to_list",
                    "args": 
                    {
                        "list": "news_list",
                        "type": "news",

                        "xfiles": "texts/news",
                        "file": "texts/news/mw_news_stories.txt"
                    }
                },

                {
                    "actn": "add_to_list",
                    "args":
                    {
                        "list": "news_list",
                        "type": "news",

                        "date": "last",
                        "contents": "There are no more new stories right now"
                    }
                },

                {
                    "actn": "set_planet",
                    "args": "Outreach"
                },

                {
                    "actn": "update_game_date",
                    "args":
                    {
                        "set":
                        {
                            "day": 1,
                            "month": "May",
                            "year": 3025
                        }
                    }
                },

                {
                    "actn": "on_date_change",
                    "args": "update_star_map"
                },

                {
                    "actn": "add_to_list",
                    "args": 
                    {
                        "list": "player_crew",
                        "type": "crew",

                        "max_health": 5,

                        "skill_level": ["veteran"],

                        "is_player": true,
                        "can_fire": false
                    }
                },

                {
                    "actn": "new_rpg",
                    "args": 
                    {
                        "map": "maps/planets/outreach.tmx",
                        "script": "maps/planets/capital_planet_rpg.json",
                        "mods":
                        [
                            "unit_setup.json"
                        ]
                    }
                },

                {
                    "actn": "pause_music",
                    "Xactn": "stop_music"
                }
            ]           
        }
    }
}
